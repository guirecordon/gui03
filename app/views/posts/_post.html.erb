  <div id="<%= dom_id post %>">
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>

    <h4>
      <%= link_to post.user.name, user_path(post.user) %>
    </h4>

    <h6>
      <%= pluralize(post.views, "view") %>
    </h6> 

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>

  </div>
